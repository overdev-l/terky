{
  "include": ["index.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["es2015", "dom", "es5", "es2015.promise"],
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions":false,
    "baseUrl": ".",
    "paths": {
      "tslib" : ["./node_modules/tslib/tslib.d.ts"]
    }
  }
}
